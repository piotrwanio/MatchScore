<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/results_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name">

    <TextView
        android:id="@+id/results_item_leagueweek"
        android:layout_width="33dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/results_item_teamA"
        android:layout_width="126dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/results_item_leagueweek"
        app:layout_constraintStart_toEndOf="@+id/results_item_leagueweek"
        app:layout_constraintTop_toTopOf="@+id/results_item_leagueweek"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/results_item_goals_teamA"
        android:layout_width="22dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/results_item_goals_teamB"
        app:layout_constraintStart_toEndOf="@+id/results_item_teamA"
        app:layout_constraintTop_toTopOf="@+id/results_item_teamA"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/results_item_goals_teamB"
        android:layout_width="23dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/results_item_teamB"
        app:layout_constraintStart_toEndOf="@+id/results_item_goals_teamA"
        app:layout_constraintTop_toTopOf="@+id/results_item_leagueweek"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/results_item_teamB"
        android:layout_width="127dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/results_item_goals_teamB"
        app:layout_constraintTop_toTopOf="@+id/results_item_leagueweek" />

</android.support.constraint.ConstraintLayout>